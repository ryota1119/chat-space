.message
  .message__info
    .message__info__user-name
      = message.user.name
    .message__info__time
      = message.created_at.to_s(:datetime)
  .message__text
    - if message.content.present?
      %p.message__text__content
        = message.content
    = image_tag message.image.url, height: '500', width: '500', class: 'message__text__image' if message.image.present?
